<Window x:Class="KindergartenProject.Windows.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KindergartenProject.Windows"
        mc:Ignorable="d"
        Title="Гостевое меню" Height="600" Width="900"
        MinHeight="300" MinWidth="400"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Image/snapedit_1700640760415.png"/>
    </Window.Background>
    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                <Image Name="LogoImage" Source="Image/e374da0d461a5728985dc98c50252111.jpg" Height="16" Width="Auto" Margin="0,0,0,20"/>
                <TextBlock Name="KindergartenTextBlock" Text="Детский сад &quot;Джаберкидс&quot;"  FontSize="12" Foreground="ForestGreen" FontFamily="Bahnschrift" Style="{DynamicResource MaterialDesignHeadline6TextBlock}"/>
            </StackPanel>
            <Button x:Name="LogoutButton" Grid.Row="0" Grid.Column="2" Height="Auto" Width="Auto"  Margin="0,0,0,0"  Content="Выйти" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#FF2C78FF" Foreground="Green" Click="LogoutButton_Click" FontFamily="Bahnschrift" Style="{DynamicResource MaterialDesignToolButton}"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" VerticalAlignment="Center">
                <StackPanel >
                    <TextBlock x:Name="RoleTextBlock" Text="Роль"  FontSize="12" Margin="0,5,0,5" Foreground="ForestGreen" FontFamily="Bahnschrift" Style="{DynamicResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="GroupsButton" Grid.Row="2" Grid.Column="0" Height="25" Width="100" Content="Группы" FontSize="12" Margin="15,0,15,15" Background="#FF2C78FF" Foreground="ForestGreen" HorizontalAlignment="Center" Click="GroupsButton_Click" FontFamily="Bahnschrift" Style="{DynamicResource MaterialDesignToolButton}"/>
            <Button x:Name="MealScheduleButton" Grid.Row="2" Grid.Column="1" Height="25" Width="100" Content="Питание" Margin="15,0,15,15" FontSize="12" Background="#FF2C78FF" Foreground="ForestGreen" HorizontalAlignment="Center" Click="MealScheduleButton_Click" FontFamily="Bahnschrift" Style="{DynamicResource MaterialDesignToolButton}"/>
            <Button  x:Name="ModeOfTheDayButton" Grid.Row="2" Grid.Column="2" Height="25" Width="100" Content="Расписание" FontSize="12" Background="#FF2C78FF" Foreground="ForestGreen" HorizontalAlignment="Center" Click="ModeOfTheDayButton_Click" FontFamily="Bahnschrift" Margin="15,0,15,15" Style="{DynamicResource MaterialDesignToolButton}"/>
        </Grid>
    </Viewbox>
</Window>
