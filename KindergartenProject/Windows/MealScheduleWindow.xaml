<Window x:Class="KindergartenProject.Windows.MealScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KindergartenProject.Windows"
        mc:Ignorable="d"
        Title="Расписание питания" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="LogoutButton" Grid.Row="0" Grid.Column="2" Height="40" Width="120" Content="Выйти" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#FF2C78FF" Foreground="WhiteSmoke" Click="LogoutButton_Click" FontFamily="Bahnschrift">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Name="DayOfTheWeekLabel" Content="День недели" Margin="30,0,0,0" FontFamily="Bahnschrift" />
            <ComboBox x:Name="DayOfTheWeekComboBox" Width="127" BorderBrush="#FF2C78FF" FontFamily="Bahnschrift"/>
        </StackPanel>
        <DataGrid x:Name="MealScheduleDataGrid" AutoGenerateColumns="False" Width="572" Height="347" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" BorderBrush="#FF2C78FF" FontFamily="Bahnschrift">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Завтрак" />
                <DataGridTextColumn Header="Полдник" />
                <DataGridTextColumn Header="Обед" />
                <DataGridTextColumn Header="Ланч" />
                <DataGridTextColumn Header="Ужин" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
